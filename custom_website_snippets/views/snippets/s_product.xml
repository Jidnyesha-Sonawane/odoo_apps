<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Define the snippet -->
	<template id="s_product_snippet" name="Enhanced Product Snippet">
		<section class="s_product_snippet o_cc o_cc2 py-5 o_colored_level" data-vxml="001" data-vcss="001">
			<div class="container">
				<h2 class="text-center mb-4">
					Our Featured Products
				</h2>
				<div class="row g-4 product-list">
					<t t-foreach="request.env['product.template'].search([], limit=6)" t-as="product">
						<div class="col-md-4 col-sm-6 product-item">
							<div class="card h-100 border-0 shadow-sm">
                                <div class="product-image">
                                    <a t-attf-href="{{ product.website_url }}">
                                        <img t-att-src="'/web/image/product.template/%s/image_256' % product.id" alt="Product Image" class="img-fluid card-img-top rounded-top" style="object-fit: cover; height: auto;" />
                                    </a>
                                </div>
                                <div class="card-body text-center">
                                    <h5 class="product-name text-truncate">
                                        <t t-esc="product.name" />
                                    </h5>
                                    <p class="product-price text-primary fw-bold">
                                        <t t-esc="product.list_price" />
                                        â‚¬
                                    </p>
                                </div>
							</div>
						</div>
					</t>
				</div>
			</div>
		</section>
	</template>
	<!-- Add to snippet registry -->
	<template id="snippets" inherit_id="website.snippets" name="Custom Snippets">
		<xpath expr="//snippets[@id='snippet_groups']" position="inside">
			<t snippet-group="custom_product" t-snippet="website.s_snippet_group" string="Custom Product" />
		</xpath>
		<xpath expr="//snippets[@id='snippet_structure']" position="inside">
			<t t-snippet="custom_website_snippets.s_product_snippet" string="Products" group="custom_product" />
		</xpath>
	</template>
	<record id="custom_website_snippets.s_product_000_scss" model="ir.asset">
		<field name="name">Product 000 SCSS</field>
		<field name="bundle">web.assets_frontend</field>
		<field name="path">custom_website_snippets/static/src/snippets/s_product_snippet/000.scss</field>
	</record>
</odoo>
